<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonCalcular"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_resultado1"
        android:layout_width="295dp"
        android:layout_height="51dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:text="@string/tv_resultado1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalcular" />

    <TextView
        android:id="@+id/tv_resultado2"
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        android:text="@string/tv_resultado2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultado1" />

    <EditText
        android:id="@+id/txt_valor1"
        android:layout_width="262dp"
        android:layout_height="63dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/txt_valor1"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="52dp"
        android:onClick="Calcular"
        android:text="@string/button"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_valor1" />
</androidx.constraintlayout.widget.ConstraintLayout>